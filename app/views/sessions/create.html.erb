<% content_for :title do
   "Log In"
   end %>
<div class="page-header"><h1>
	Log in
</h1></div>
<%= form_tag sessions_path, :class => 'form-horizontal' do %>
<div class="control-group">
    <%= label_tag :email, nil, :class => 'control-label' %>
    <div class="controls">
		<%= text_field_tag :email, params[:email], :class => 'text_field' %>
    </div>
</div>
<div class="control-group">
    <%= label_tag :password, nil, :class => 'control-label' %>
    <div class="controls">
		<%= password_field_tag :password, nil, :class => 'text_field' %>
    </div>
</div>
<div class="form-actions">
    <%= submit_tag "Log in", :class => 'btn btn-primary' %>
</div>
<% end %>
