<div class="page-header">
	<h1>Listing events</h1>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Date</th>
			<th>Actions</th>
		</tr>
	</thead>

	<tbody>
		<% @events.each do |event| %>
			<tr>
				<td><%= link_to event.name, event %></td>
				<td><%= event.date %></td>
				<td>
					<div class="btn-group btn-group-xs">
						<%= link_to 'Edit', edit_event_path(event), class: "btn btn-default btn-xs" %>
						<%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
					</div>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path, :class => "btn btn-success" %>
