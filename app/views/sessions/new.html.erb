<div class="page-header">
	<h1>Log In</h1>
</div>

<%= form_tag sessions_path, :html => { :class => "form-horizontal" } do %>
	<div class="form-group">
		<%= text_field_tag :email, nil, class: "form-control", placeholder: "Email" %>
	</div>
	<div class="form-group">
		<%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
	</div>
	<%= submit_tag "Log In", class: "btn btn-success" %> or <%= link_to "Sign Up", new_user_path, class: "link-no-underline" %>
<% end %>
