<!DOCTYPE html>

<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Docket</title>
		<%= favicon_link_tag "favicon.ico" %>
		<%= stylesheet_link_tag "application" %>
		<%= javascript_include_tag "application" %>
		<% unless (yield :javascripts).blank? %>
			<script type="text/javascript">
				<%= yield :javascripts %>
			</script>
		<% end %>
		<%= javascript_include_tag "turbolinks" %>
		<%= csrf_meta_tags %>
	</head>

	<body>
		<%= navbar :brand => "My Docket", :brand_link => root_url, :fixed => :top do %>
			<%= navbar_group :class => "foo", :id => "menu" do %>
				<%= navbar_item "Events", events_path %>
				<%= navbar_item "Teachers", teachers_path %>
				<%= navbar_item "Courses", courses_path %>
				<%= navbar_item "Classes", classrooms_path %>
			<% end %>
			<%= navbar_group :align => "right" do %>
				<%= navbar_text current_user ? "Logged in as " + current_user.name : "Not logged in" %>
				<% if current_user %>
					<%= navbar_item "Log Out", log_out_path %>
				<% else %>
					<%= navbar_item "Sign Up", new_user_path %>
				<% end %>
			<% end %>
		<% end %>

		<article>
			<% if flash[:notice] %>
				<div class="alert alert-success alert-dismissable">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					<%= flash[:notice] %>
				</div>
			<% end %>
			<% if flash[:alert] %>
				<div class="alert alert-danger alert-dismissable">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					<%= flash[:alert] %>
				</div>
			<% end %>

			<% if current_user %>
				<div class="row">
					<div class="col-md-7 col-md-offset-1">
						<%= yield %>
					</div>

					<div class="col-md-2 col-md-offset-1 visible-md visible-lg sidebar-col">
						<div class="panel panel-default" data-spy="affix" data-clampedwidth=".sidebar-col">
							<div class="panel-heading">
								Schedule
							</div>
							
							<div class="list-group">
								<% if !current_user || current_user.classrooms.empty? %>
									<div class="list-group-item">No classes</div>
								<% else %>
									<% current_user.classrooms.sort_by(&:period).each do |classroom| %>
										<%= link_to (content_tag(:span, classroom.period, class: "badge") + classroom.course.name), classroom, class: "list-group-item " + (request.path == classroom_path(classroom) ? "active" : "") %>
									<% end %>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			<% else %>
				<div class="row">
					<div class="col-md-8 col-md-offset-2">
						<%= yield %>
					</div>
				</div>
			<% end %>
		</article>
	</body>
	
	<footer>
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				You are running Docket version <%= Docket::VERSION %>.
				<br />
				<%= link_to "View on GitHub", Docket::GITHUB_URL %>
			</div>
		</div>
	</footer>
</html>
