<div class="page-header">
	<h1><%= @user.name %></h1>
</div>

<p>
  <%= @user.name %> will graduate in <%= @user.graduation_year %>. Email them at <%= mail_to @user.email %>.
</p>

<div class="btn-group">
	<%= link_to 'Activity', activity_user_path(@user), class: "btn btn-primary" %>
	<%= link_to 'Edit', edit_user_path(@user), class: "btn btn-success" %>
	<%= link_to 'Back', users_path, class: "btn btn-default" %>
</div>
