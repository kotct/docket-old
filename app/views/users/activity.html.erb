<div class="page-header">
	<h1><%= @user.name %>'s activity</h1>
</div>

<table class="table table-striped">
	<tbody>
		<% @activities.each do |activity| %>
			<tr>
				<td><%= render_activity activity %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<div class="btn-group">
	<%= link_to 'Back to User', @user, class: "btn btn-primary" %>
	<%= link_to 'All Users', users_path, class: "btn btn-default" %>
</div>
