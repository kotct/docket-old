<div class="page-header">
  <h1><%= @exam.name %></h1>
</div>

<p>
	<a href="<%= classroom_path(@exam.classroom) %>"><%= @exam.classroom.teacher.name %>'s <%= @exam.classroom.period.ordinalize %> period <%= @exam.classroom.course.name %> class</a> will have an exam on <%= @exam.date %>.
</p>

<p><%= @exam.description %></p>

<div class="btn-group">
	<%= link_to 'Edit', edit_exam_path(@exam), class: "btn btn-primary" %>
	<%= link_to 'Back', classroom_path(@exam.classroom), class: "btn btn-default" %>
</div>
