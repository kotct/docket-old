<%= form_for @classroom, :html => { :class => "form-horizontal" } do |f| %>
<% if @classroom.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@classroom.errors.count, "error") %> prohibited this classroom from being saved:</h2>

    <ul>
		<% @classroom.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
		<% end %>
    </ul>
</div>
<% end %>

<div class="form-group">
    <%= f.label :course_id, :class => "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.number_field :course_id, :class => "form-control" %>
	</div>
</div>
<div class="form-group">
    <%= f.label :teacher_id, :class => "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.number_field :teacher_id, :class => "form-control" %>
	</div>
</div>
<div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.text_area :description, :class => "form-control" %>
	</div>
</div>
<div class="form-group">
    <%= f.label :period, :class => "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.number_field :period, :class => "form-control" %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit class: "btn btn-success" %>
	</div>
</div>
<% end %>
